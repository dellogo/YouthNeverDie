<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemTextId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">
    <!--<CheckBox
        android:id="@+id/target_checkbox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints" />-->
    <TextView
        android:padding="5dp"
        android:id="@+id/startdate_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/modu_bold"
        android:text="startdate"
        android:textSize="12dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/modu_bold"
        android:text="~"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@id/startdate_textview"
        app:layout_constraintRight_toLeftOf="@id/finaldate_textview"
        tools:ignore="MissingConstraints" />
    <TextView
        android:padding="5dp"
        android:id="@+id/finaldate_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="finaldate"
        android:fontFamily="@font/modu_bold"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@id/startdate_textview"
        tools:ignore="MissingConstraints" />
    <TextView
        android:padding="5dp"
        android:id="@+id/term_target_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="content"
        android:fontFamily="@font/modu_bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/startdate_textview"
        android:layout_marginTop="12dp"
        android:textSize="19dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>