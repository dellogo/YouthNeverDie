<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".fragment.HomeFragment">
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:context=".fragment.HomeFragment"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fighting"
                android:layout_width="195dp"
                android:layout_height="90dp"
                android:background="@drawable/round_button"
                android:fontFamily="@font/modu_bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/logo"
                app:layout_constraintBottom_toTopOf="@id/license"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/site"
                tools:ignore="MissingConstraints,NotSibling" />
            <FrameLayout
                android:id="@+id/site_layout"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/logo"
                app:layout_constraintBottom_toTopOf="@id/license"
                app:layout_constraintLeft_toRightOf="@+id/fighting"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="10dp">
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/site"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_button"/>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/site_left_btn"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_left_arrow"
                    android:layout_marginTop="25dp"
                    tools:ignore="MissingConstraints" />
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/site_right_btn"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="25dp"
                    tools:ignore="MissingConstraints" />
            </FrameLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/fighting"
            app:layout_constraintBottom_toTopOf="@+id/work_best_writing"
            android:background="@drawable/round_button"
            android:padding="8dp"
            android:fontFamily="@font/modu_bold"
            android:text="자격증 시행 일정 조회 바로가기"
            android:textSize="20dp"/>
        <LinearLayout
            android:id="@+id/work_best_writing"
            app:layout_constraintTop_toBottomOf="@+id/license"
            app:layout_constraintBottom_toTopOf="@id/license_best_writing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            android:padding = "8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="취업 게시판 Best"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:fontFamily="@font/modu_bold"
                        android:layout_gravity="center">
                    </TextView>
                    <TextView
                        android:id="@+id/titleArea"
                        android:text="title"
                        android:textSize="19dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/modu_bold"
                        android:padding="3dp"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:id="@+id/contentArea"
                        android:text="content"
                        android:fontFamily="@font/modu_bold"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:padding="3dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_heart_black"
                    android:padding="2dp">
                </ImageView>
                <TextView
                    android:id="@+id/boardHeartCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/modu_bold"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="2dp"
                    android:text="0">
                </TextView>
                <TextView
                    android:id="@+id/timeArea"
                    android:text="time"
                    android:textSize="10sp"
                    android:fontFamily="@font/modu_bold"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:layout_marginRight="10dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/license_best_writing"
            app:layout_constraintTop_toBottomOf="@+id/work_best_writing"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            android:padding = "8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자격증 게시판 Best"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:fontFamily="@font/modu_bold"
                        android:layout_gravity="center">
                    </TextView>
                    <TextView
                        android:id="@+id/titleArea2"
                        android:text="title"
                        android:textSize="19dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/modu_bold"
                        android:padding="3dp"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:id="@+id/contentArea2"
                        android:text="content"
                        android:fontFamily="@font/modu_bold"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:padding="3dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_heart_black"
                    android:padding="2dp">
                </ImageView>
                <TextView
                    android:id="@+id/boardHeartCount2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/modu_bold"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="2dp"
                    android:text="0">
                </TextView>
                <TextView
                    android:id="@+id/timeArea2"
                    android:text="time"
                    android:textSize="10sp"
                    android:fontFamily="@font/modu_bold"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:layout_marginRight="10dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>